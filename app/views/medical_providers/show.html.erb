<h1><%= @medical_provider.company_name %></h1>
<div>
  <div id = "form-control-bar" class = "basic-icon-bar"> 
	<% if can? :read, MedicalProvider %>
      <div>
        <%= link_to image_tag("back_button_icon.png", title: "Back to Index", alt: "Back to Index"),
        medical_providers_path %>
      </div>
	<% end %> 
	<% if can? :update, MedicalProvider %>
      <div id = "control-two">  
        <%= link_to image_tag("edit_button_icon.png", title: "Edit Medical Provider", alt: "Edit Medical Provider"),
        '#EditMedicalProvider', onclick: onClick="SwitchOneAndTwo(); return false;"; %>    
      </div>
	<% end %>
	<% if can? :delete, MedicalProvider %>
      <div>
        <%= link_to image_tag("delete_button_icon.png", title: "Delete Medical Provider", alt: "Delete Medical Provider"),
        medical_provider_path(@medical_provider), method: :delete, data: { confirm: 'Are you sure you wish to delete this MedicalProvider?' } %>
      </div>
	<% end %>
	<table class = "data-counter" style = "margin-left: 3px; margin-top: 1px;">
	  <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
	  </tr>
	</table>
  </div>
  <div class = "sliding-plate">
	<div id = "plate-one" >
	  <div>
	    <h2>- Medical Provider Key Data -</h2>
	    <table>
		  <tr> 
            <td>Carrier ID:</td>
            <td><%= @medical_provider.id %></td>
		  </tr>
		  <tr> 
            <td>Company Name:</td>
            <td><%= @medical_provider.company_name %></td>
		  </tr>
		  <tr> 
            <td>Corporate Representative:</td>
            <td>
              <%= @medical_provider.corporate_rep_prefix << " " <<
              @medical_provider.corporate_rep_first_name << " " <<
              @medical_provider.corporate_rep_middle_name << " " <<
              @medical_provider.corporate_rep_last_name << " " <<
              @medical_provider.corporate_rep_suffix %>
            </td>
          </tr>
          <tr>  
		    <td>Address:</td>
		    <td>
			  <%= @medical_provider.address_line_one %>
			  <% unless @medical_provider.address_line_two.nil? %>
			    <br>
			    <%= @medical_provider.address_line_two %>
			  <% end %>
			  <% unless @medical_provider.address_line_three.nil? %>
			    <br>
			    <%= @medical_provider.address_line_three %>
			  <% end %>
		    </td>
		  </tr>
		  <tr>
		    <td>City:</td>
		    <td><%= @medical_provider.city %></td>
		  </tr>
		  <tr>
		    <td>State:</td>
		    <td><%= @medical_provider.state %></td>
		  </tr>
		  <tr>
		    <td>ZIP Code:</td>
		    <td>
		      <%= @medical_provider.zip_code %>
		      <% unless @medical_provider.plus_four_code.nil? %>
		        <%= " " << @medical_provider.plus_four_code %>
		      <% end %>
		    </td>
		  </tr>
		  <tr>  
		    <td>Phone Number:</td>
		    <td>
			  <%= "(" << @medical_provider.area_code << ") " << 
			  @medical_provider.exchange << " - " << @medical_provider.suffix %>
			  <% unless @medical_provider.extension.nil? %>
			    <%= " Ext. " << @medical_provider.extension %>
			  <% end %>
		    </td>
		  </tr>
          <tr>  
		    <td>Fax Number:</td>
		    <td>
			  <%= "(" << @medical_provider.fax_area_code << ") " << 
			  @medical_provider.exchange << " - " << @medical_provider.suffix %>
		    </td>
		  </tr>
		  <tr>
		    <td>E-Mail Address:</td>
		    <td><%= @medical_provider.email_address %></td>
		  </tr>
	    </table>
	  </div>
	</div>
	<div id = "plate-two" style = "display: block; height: 0; margin-left: 380px; opacity: 0; width: 0;">
	  <div>
	    <h2>- Edit MedicalProvider -</h2>
	    <%= render 'form' %>
	  </div>
	</div>
  </div>
</div>
