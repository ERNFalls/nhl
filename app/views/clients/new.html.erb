<h1>New Client</h1>
<div>
  <div id = "simple-control-bar" class = "basic-icon-bar">  
    <% if can? :read, Client %>
	  <div>
	    <%= link_to link_to image_tag("list_button_icon.png", title: "Back to Index", alt: "Back to Index"), clients_path %>
	  </div>
    <% end %>
  </div>
  <div class = "sliding-plate">
    <div id = "plate-one">
      <div>
        <%= form_for @client do |f| %>
	      <% if @client.errors.any? %>
		    <div id = "error-explanation">
	          <h2><%= pluralize(@client.errors.count, "Error") %> Prohibited Client From Being Saved:</h2>
	          <ul>
		      <% @client.errors.full_messages.each do |msg| %>
		        <li><%= msg.titleize %></li>
		      <% end %>
		      </ul>
		    </div>
	      <% end %>
	      <div class = "basic-form">
	        <%= render "basic_fieldsets", f:f %>
	      </div>
	      <div class = "basic-form-save-button">
	        <%= image_submit_tag("save_button_icon.png", :title => "Save Client", :alt => "Save Client") %>
	      </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
