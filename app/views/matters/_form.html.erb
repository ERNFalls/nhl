<%= form_for @matter do |f| %>
  <% if @matter.errors.any? %>
    <div id = "error-explanation">
	  <h2><%= pluralize(@matter.errors.count, "Error") %> Prohibited Matter From Being Saved:</h2>
	  <ul>
      <% @matter.errors.full_messages.each do |msg| %>
        <li><%= msg.titleize %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class = "basic-form">
    <%= render "fieldsets", f:f %>
  </div>
  <div class = "basic-form-save-button">
	<%= image_submit_tag("save_button_icon.png", :title => "Save Matter", :alt => "Save Matter") %>
  </div>
<% end %>
