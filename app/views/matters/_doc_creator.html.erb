<div>
  <div class = "inner-icon-bar">
    <% if can? :read, Matter %>
	  <div>
	    <%= link_to image_tag("back_button_icon.png", title: "Close Doc Creator", alt: "Close Doc Creator"), '#CloseDocCreator', onclick: onClick="SlideOutThirteen(); return false;"; %>
	  </div>
    <% end %>
  </div>
  <h2>Document Creator</h2>
	<div class = "basic-form">
	  <%= form_tag({:controller => "matters", :action => "create_docx"}, :method => "get") do %>
		<fieldset>
		  <div>
		    <%= label_tag "template", "Template:" %>
			<br>
			<%= select_tag "template", options_from_collection_for_select(@templates, :file, :name), {:prompt => "Select a Document Template", :style => "width: 368px;"} %>
		  </div>
		  <div class = "create-document-control">
			<div class = "create-document-checkbox-option">
			  <%= label_tag "save", "Add to File:" %>
			  <%= check_box_tag "save", "true", true, class: "checkbox" %>
			</div>
			<div class = "create-document-checkbox-option">
			  <%= label_tag "download", "Download:" %>
			  <%= check_box_tag "download", "true", false, class: "checkbox" %>
			</div>
			<div class = "create-document-button">
			  <%= image_submit_tag("build_button_icon.png", :alt => "Create", :title => "Create", :docx_template => "Create") %>
			</div>
		  </div>
		</fieldset>
	  <% end %>
	</div>
	<table>
	  <% Matter.inspect.split(/\)|\(|,\s/).each_with_index do |attribute| %>
		<tr>
		  <td>!<%= attribute.split(/:/).first %>!</td>
		</tr>
	  <% end %>
	</table>
  <div>
	<%= debug @matter %>
	<%= debug @templates %>
  </div>
</div>
