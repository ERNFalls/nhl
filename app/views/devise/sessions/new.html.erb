<%= render "devise/shared/links" %>
<h2>Sign In</h2>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email, "E-Mail Address:" %><br />
  <%= f.email_field :email, :autofocus => true, :style => "width: 320px;" %></div>
  <div><%= f.label :password, "Password:" %><br />
  <%= f.password_field :password, :style => "width: 320px;" %></div>
  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, "Remember Me" %></div>
  <% end -%>
  <div style = "text-align: right"><%= f.submit "Sign In", :style => "width: 80px;" %></div>
<% end %>
