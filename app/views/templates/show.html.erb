<% @user = User.where(id: [@template.user_id]).pluck(:id).join(" ") %>
<h1><%= @template.name %></h1>
<div>
  <div id = "simple-control-bar" class = "basic-icon-bar">
    <% if can? :read, Template %>
	  <div>
	    <%= link_to link_to image_tag("back_button_icon.png", title: "Back to Index", alt: "Back to Index"),
	    templates_path %>
	  </div>
    <% end %>
    <% if can? :update, Template %>
	  <div>  
	    <%= link_to link_to image_tag("edit_button_icon.png", title: "Edit Template", alt: "Edit Template"),
	    edit_template_path(@template) %>    
	  </div>
    <% end %>
    <% if can? :delete, Template %>
	  <div>
	    <%= link_to link_to image_tag("delete_button_icon.png", title: "Delete Template", alt: "Delete Template"), template_path(@template),
	    method: :delete, data: { confirm: 'Are you sure you wish to delete this Template?' } %>
	  </div>
    <% end %>
  </div>
  <div class = "sliding-plate">
    <div id = "plate-one">
      <div>
        <table>
          <tr>
            <td>ID:</td>
            <td><%= @template.id %></td>
          </tr>
          <tr>
            <td>Name:</td>
	        <td><%= @template.name %></td>
          </tr>
          <tr>
            <td>Creator:</td>
            <td><%= User.find(@user).username %></td>
          </tr>
          <tr>
            <td>Private:</td>
            <td><%= @template.private.to_s.titleize %></td>
          </tr>
          <tr>
            <td>File Path:</td>
	        <td><%= @template.file %></td>
          </tr>
          <tr>
            <td>Created:</td>
	        <td><%= @template.created_at.to_datetime.in_time_zone("Eastern Time (US & Canada)") %></td>
          </tr>
          <tr>
            <td>Updated:</td>
	        <td><%= @template.updated_at.to_datetime.in_time_zone("Eastern Time (US & Canada)") %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
