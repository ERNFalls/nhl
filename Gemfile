source 'https://rubygems.org'

# Bundle Edge Rails Instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.2'

# Uses PostgreSQL as the Database for Active Record
gem 'pg', '~> 0.17.1'

# Use SCSS for Stylesheets
gem 'sass-rails', '~> 4.0.0'

# Use Uglifier as Compressor for JavaScript Assets
gem 'uglifier', '~> 2.5.0'

# Use CoffeeScript for .js.coffee Assets and Views
gem 'coffee-rails', '~> 4.0.0'

# See https://github.com/sstephenson/execjs#readme for More Supported Runtimes
# gem 'therubyracer', platforms: :ruby

# Use jquery as the JavaScript Library
gem 'jquery-rails'

# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 1.2'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

# Use ActiveModel has_secure_password
# gem 'bcrypt-ruby', '~> 3.0.0'

# Use Debugger
# gem 'debugger', group: [:development, :test]

#Use nested_has_many_through gem.
gem 'nested_has_many_through', '~> 0.0.2'

#Use Devise Gem for Authentication
gem 'devise', '~> 3.2.2'

#Use CanCan Gem for Adding Abilites to Users
gem 'cancan', '~> 1.6.10'

#Use Thin Server for Testing SSL
gem 'thin', '~> 1.6.1'

#Use Heroku for Deployment Testing
#gem 'rails_12factor', group: :production

#Use Nokogiri for Static Web Content Scraping and the Like
gem 'nokogiri', '~> 1.6.1'

#Use Mechanize for Dynamic Web Content Scraping (Dependency unf_ext Fails to Load on Windows)
gem 'mechanize', '~> 2.7.2'

#Use MIME Types Gem Library required for Mechanize Gem
gem 'mime-types', '~> 1.25.1'

#Use unf_ext Gem for Unicode Support Library Required for Mechanize
gem 'unf_ext', '~> 0.0.6'

#Active Record Session Store for Dealing With Cookie Overlow (Delicious)
gem 'activerecord-session_store'

#CarrierWave for Uploading Images
gem 'carrierwave', '~> 0.10.0'

#Kaminari for Pagination
gem 'kaminari', '~> 0.15.1'

#Sunspot for Full Text Capable Searching
gem 'sunspot_rails', '~> 2.1.0'

#Sunspot Solr
gem 'sunspot_solr', '~> 2.1.0'

#Progress Bar for indicating Sunspot Solr Reindex Progress
gem 'progress_bar', '~> 1.0.0'

#Remotipart Gem Allowing for AJAX in Upload Forms
gem 'remotipart', '~> 1.2.1'

#Possesive Gem for Possesive Nouns...Yep
gem 'possessive', '~> 1.0.1'

#DOCX Replace Gem for Simple Document Creation
gem 'docx_replace', '~> 1.0.1'

#Foreigner Gem for Adding Foreign Keys to Migrations
gem 'foreigner'
